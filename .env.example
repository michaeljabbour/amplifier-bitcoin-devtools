# Bitcoin Core RPC connection
#
# These are loaded by your shell before running amplifier.
# For persistent config without env vars, use ~/.amplifier/settings.yaml:
#
#   modules:
#     tools:
#       - module: tool-bitcoin-rpc
#         config:
#           rpc_host: 127.0.0.1
#           rpc_port: 18445
#           cookie_file: /path/to/.cookie
#

BITCOIN_RPC_HOST=127.0.0.1
BITCOIN_RPC_PORT=18445

# Option A: cookie file (preferred for local nodes -- no plaintext credentials)
BITCOIN_COOKIE_FILE=/Users/you/.polar/networks/2/volumes/bitcoind/backend1/regtest/.cookie

# Option B: explicit credentials (if not using cookie auth)
# BITCOIN_RPC_USER=__cookie__
# BITCOIN_RPC_PASSWORD=<hash>

# Aggeus Prediction Markets
#
# Oracle signs market_definition events (kind 46416) with its private key.
# The coordinator pubkey is embedded in every market listing.
# Run `aggeus_create_market` only works when both are set.
#
AGGEUS_ORACLE_PRIVKEY=<32-byte hex secp256k1 private key>
AGGEUS_ORACLE_PUBKEY=<32-byte hex x-only public key derived from oracle privkey>
AGGEUS_COORDINATOR_PRIVKEY=<32-byte hex secp256k1 private key>
AGGEUS_COORDINATOR_PUBKEY=<32-byte hex x-only public key derived from coordinator privkey>
AGGEUS_RELAY_URL=ws://localhost:8080
