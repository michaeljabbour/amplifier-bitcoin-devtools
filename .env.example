# Copy this file to .env and fill in your values.
# .env is gitignored — never commit real credentials.

# ---------------------------------------------------------------------------
# Bitcoin Core RPC
# ---------------------------------------------------------------------------

BITCOIN_RPC_HOST=127.0.0.1
BITCOIN_RPC_PORT=18445

# Option A: cookie file (preferred for local nodes — no plaintext credentials)
BITCOIN_COOKIE_FILE=/path/to/.polar/networks/1/volumes/bitcoind/backend1/regtest/.cookie

# Option B: explicit credentials (if not using cookie auth)
# BITCOIN_RPC_USER=__cookie__
# BITCOIN_RPC_PASSWORD=<hash>

# ---------------------------------------------------------------------------
# LND (Lightning Network Daemon)
# ---------------------------------------------------------------------------

LND_REST_HOST=127.0.0.1
LND_REST_PORT=8080
LND_TLS_CERT=/path/to/.polar/networks/1/volumes/lnd/alice/tls.cert
LND_MACAROON_PATH=/path/to/.polar/networks/1/volumes/lnd/alice/data/chain/bitcoin/regtest/admin.macaroon

# ---------------------------------------------------------------------------
# Aggeus Prediction Markets
# ---------------------------------------------------------------------------

AGGEUS_RELAY_URL=ws://localhost:8080

# Oracle key — required to publish markets via aggeus_create_market
AGGEUS_ORACLE_PRIVKEY=<32-byte hex secp256k1 private key>

# Coordinator pubkey — embedded in every market listing (public, not secret)
AGGEUS_COORDINATOR_PUBKEY=<32-byte hex x-only public key>
